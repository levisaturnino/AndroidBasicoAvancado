<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.levisaturnino.eventsproject.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusDown="@+id/btnCadastro"
        android:text="Cadastro de ImÃ³vel" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtNome"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusDown="@+id/edtNome"
        android:id="@+id/edtRegiao"/>
    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spRegiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.AppCompatSpinner>
   <ImageView
       android:id="@+id/imgBairro"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"/>

    <Button
        android:onClick="cliquebotao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/btnCadastro"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
